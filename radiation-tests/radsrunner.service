[Unit]
Description=Radiation Tests Runner
After=network.target

[Service]
ExecStart=/home/debian/RadiationTestsRunner/src/radsrunner --server 192.168.7.1 --iterations 5
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always

